<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:src="@color/colorLightGrey"
                    android:id="@+id/imgCommentProfile"
                    android:layout_height="40dp">
                </de.hdodenhof.circleimageview.CircleImageView>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingLeft="6dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#0C0D0E"
                        android:textStyle="bold"
                        android:id="@+id/txtCommentName"
                        android:text="Minh Hieu"

                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="11sp"
                        android:id="@+id/txtCommentDate"
                        android:textColor="@color/colorLightGrey"
                        android:text="24-07-2020"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_marginRight="8dp"
                 android:layout_gravity="center_vertical"
                android:src="@drawable/ic_delete_comment"
                android:background="@android:color/transparent"
                android:id="@+id/btnDeleteComment"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtCommentText"
            android:textSize="14sp"
            android:textColor="@color/colorGrey"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp"
            android:text="Hello  !!!"/>
        <VideoView
            android:layout_width="match_parent"
            android:background="#cccccc"
            android:layout_height="1px"/>
        
    </LinearLayout>






</androidx.cardview.widget.CardView>